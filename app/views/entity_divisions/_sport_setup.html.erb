


<div class="w3-container" >
  <div id="id01" class="w3-modal w3-animate-opacity" style=" display: block">
    <!--<div class="w3-modal-content w3-card-4" >-->
    <br/>



    <div class="w3-white w3-hover-shadow col-md-8 offset-md-2 w3-card-4 w3-border w3-border-purple rcorners w3-center">
      <br>
      <p id="notes13"><%#= notice %></p>
      <!--  <p id="for_division_setup"><%##= notice %></p>-->
      <h4>Activities for <%= @entity_div_name %></h4>
      <br>
      <div class="w3-container">
        <div>
          <div class="">
            <%#= link_to 'NEW', fixture_new_path(code: params[:code], class_div_top: params[:class_div_top], entity_code: params[:entity_code], count: params[:count], page: params[:page]), style: "width:120px;",
                        class: 'w3-button w3-purple-vpos w3-border w3-border-purple w3-small w3-round-large',remote:true %>
            <%= link_to 'BACK', entity_division_index_path(code: params[:code], entity_code: params[:entity_code], count: params[:count], page: params[:page]), style: "width:120px;",
                        class: 'w3-button w3-white w3-border w3-border-purple w3-small w3-round-large',remote:true %>
          </div>
          <!--          <div class="w3-half">-->
          <%#= select_tag :count, options_for_select([10,20,30,40,50], params[:count].to_i),
                     :data => {  :remote => true, :url => url_for(:controller => "entity_divisions", :action => "entity_division_index", :params => {entity_code: params[:entity_code]})},
                     id:"record", class: "w3-button w3-white w3-border w3-border-purple w3-round-large",
                     style: "width:auto; height:35px; float:right", remote:true %>

          <!--          </div>-->
        </div>
        <br>
        <div class="table-responsive-md pre-scrollable w3-border w3-border-purple" style="max-height: 50vh">
          <!--          <br>-->
          <table class="table w3-responsive table-striped">
            <thead>
            <tr>
              <th></th>
              <th>Description</th>
              <th>Fixture Date</th>
              <th>Status</th>
              <th>Date</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <% @activity_divs.each do |activity_div| %>

              <tr>
                <td><%= link_to 'VIEW', activity_div_path(activity_div, class_div_top: params[:class_div_top], code: params[:code], entity_code: params[:entity_code], count: params[:count], page: params[:page]),
                                style: "width:80px; height: 30px;",
                                class: 'w3-button w3-purple-vpos w3-border w3-border-purple w3-tiny w3-round-large', remote:true%></td>
                <td><strong><%= activity_div.activity_div_desc %> <%#= entity_info.entity_category.assigned_code %></strong></td>
                <td><strong><%= activity_div.activity_date %> <%#= entity_info.entity_category.assigned_code %></strong></td>
                <% if activity_div.active_status %>
                  <td><strong>Active</strong></td>
                <% else %>
                  <td><strong>Inactive</strong></td>
                <% end %>
                <td><strong><%= activity_div.created_at %></strong></td>
                <td>
                  <% if activity_div.active_status && activity_div.del_status == false %>
                    <% if activity_div.activity_fixture_id == nil %>
                      <%= link_to 'ADD FIXTURES', fixture_edit_path(act_div_id: activity_div.id, class_div_top: params[:class_div_top], code: params[:code], entity_code: params[:entity_code], count: params[:count], page: params[:page]),
                                  style: "width:100px; height: 30px; color: #800754 !important",
                                  class: 'w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large', remote:true%>
                    <% else %>
                      <%= link_to 'EDIT', fixture_edit_path(act_div_id: activity_div.id, class_div_top: params[:class_div_top], code: params[:code], entity_code: params[:entity_code], count: params[:count], page: params[:page]),
                                  style: "width:100px; height: 30px; color: #800754 !important",
                                  class: 'w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large', remote:true%>
                    <% end %>

                  <% else %>

                    <button class="w3-button w3-white w3-border w3-disabled w3-border-purple w3-tiny w3-round-large" style="width:100px; height: 30px; color: #800754 !important">EDIT</button>
                  <% end %>

                  <%# if activity_div.active_status %>
                    <%#= link_to 'DISABLE', activity_div_path(activity_div, class_div_top: params[:class_div_top], code: params[:code], entity_code: params[:entity_code], count: params[:count], page: params[:page]),
                                style: "width:100px; height: 30px; color: #800754 !important",
                                method: :delete, data: { confirm: "Do you wish to disable: #{activity_div.activity_div_desc}?" },
                                class: 'w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large', remote:true%>
                  <%# else %>
                    <%#= link_to 'ENABLE', activity_div_path(activity_div, class_div_top: params[:class_div_top], code: params[:code], entity_code: params[:entity_code], count: params[:count], page: params[:page]),
                                style: "width:100px; height: 30px;",
                                method: :delete, data: { confirm: "Do you wish to enable: #{activity_div.activity_div_desc}?" },
                                class: 'w3-button w3-purple-vpos w3-border w3-border-purple w3-tiny w3-round-large', remote:true%>
                  <%# end %>

                </td>
              </tr>

            <% end %>

            </tbody>
          </table>
        </div>
        <br><br>
      </div>



    </div>



    <br/>
    <div class="col-md-7 col-md-offset-5">
      <br/>
      <br/>
    </div>
    <!--</div>-->

  </div>
</div>




<script>
    $(function(){
        $('.pagination a').attr('data-remote', 'true')
    });

</script>
