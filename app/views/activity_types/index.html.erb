<p id="notice"><%= notice %></p>

<h1>Activity Types</h1>

<table>
  <thead>
    <tr>
      <th>Assigned code</th>
      <th>Type desc</th>
      <th>Comment</th>
      <th>Active status</th>
      <th>Del status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_types.each do |activity_type| %>
      <tr>
        <td><%= activity_type.assigned_code %></td>
        <td><%= activity_type.type_desc %></td>
        <td><%= activity_type.comment %></td>
        <td><%= activity_type.active_status %></td>
        <td><%= activity_type.del_status %></td>
        <td><%= activity_type.user_id %></td>
        <td><%= link_to 'Show', activity_type %></td>
        <td><%= link_to 'Edit', edit_activity_type_path(activity_type) %></td>
        <td><%= link_to 'Destroy', activity_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

