<p id="notice"><%= notice %></p>

<h1>Activity Participants</h1>

<table>
  <thead>
    <tr>
      <th>Assigned code</th>
      <th>Division code</th>
      <th>Participant name</th>
      <th>Participant alias</th>
      <th>Image data</th>
      <th>Image path</th>
      <th>Comment</th>
      <th>Active status</th>
      <th>Del status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activity_participants.each do |activity_participant| %>
      <tr>
        <td><%= activity_participant.assigned_code %></td>
        <td><%= activity_participant.division_code %></td>
        <td><%= activity_participant.participant_name %></td>
        <td><%= activity_participant.participant_alias %></td>
        <td><%= activity_participant.image_data %></td>
        <td><%= activity_participant.image_path %></td>
        <td><%= activity_participant.comment %></td>
        <td><%= activity_participant.active_status %></td>
        <td><%= activity_participant.del_status %></td>
        <td><%= activity_participant.user_id %></td>
        <td><%= link_to 'Show', activity_participant %></td>
        <td><%= link_to 'Edit', edit_activity_participant_path(activity_participant) %></td>
        <td><%= link_to 'Destroy', activity_participant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

