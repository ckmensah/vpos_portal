
<div>
  <br>
  <p id="notes7"><%#= notice %></p>
  <h4>Participants for <%= @entity_name %></h4>
  <br>
  <div>
    <div class="w3-half">
      <%= link_to 'NEW', new_activity_participant_path(entity_code: params[:entity_code], code: params[:code], count: params[:count], page: params[:page]), style: "width:120px;",
                  class: 'w3-button w3-purple-vpos w3-border w3-border-purple w3-small w3-round-large',remote:true %>
      <%= link_to 'BACK', main_sports_index_path(params[:entity_code], code: params[:code], count: params[:count], page: params[:page]), style: "width:120px;",
                  class: 'w3-button w3-white w3-border w3-border-purple w3-small w3-round-large',remote:true %>
    </div>
    <div class="w3-half">
      <%= select_tag :count, options_for_select([10,20,30,40,50], params[:count].to_i),
                     :data => {  :remote => true, :url => url_for(:controller => "activity_participants", :action => "activity_participant_index", :params => {code: params[:code], entity_code: params[:entity_code]})},
                     id:"record", class: "w3-button w3-white w3-border w3-border-purple w3-round-large",
                     style: "width:auto; height:35px; float:right", remote:true %>

    </div>
  </div>
  <br>
  <div class="table-responsive-md">
    <br>
    <table class="table w3-responsive table-striped">
      <thead>
      <tr>
        <th></th>
        <th>Participant</th>
        <th>Alias</th>
        <th>Logo</th>
        <th>Status</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @activity_participants.each do |activity_participant| %>

        <tr>
          <td><%= link_to 'VIEW', activity_participant_path(activity_participant, entity_code: params[:entity_code], code: params[:code], count: params[:count], page: params[:page]),
                          style: "width:70px; height: 30px;",
                          class: 'w3-button w3-purple-vpos w3-border w3-border-purple w3-tiny w3-round-large', remote:true%></td>
          <td><strong><%= activity_participant.participant_name %></td>
          <td><strong><%= activity_participant.participant_alias %></td>
          <%# if activity_participant.image.present? %>
<!--            <td><%#= image_tag activity_participant.image_url(:small)  %></td>-->
          <%# end %>


<!--          <td><strong><%##= activity_participant.activity_category_div.category_div_desc if activity_fixture.activity_category_div_id.present? %></strong></td>-->
          <% if activity_participant.active_status %>
            <td><strong>Active</strong></td>
          <% else %>
            <td><strong>Inactive</strong></td>
          <% end %>
          <td><strong><%= activity_participant.created_at %></strong></td>
          <td>
            <%= link_to 'EDIT', edit_activity_participant_path(activity_participant, entity_code: params[:entity_code], code: params[:code], count: params[:count], page: params[:page]),
                        style: "width:70px; height: 30px; color: #800754 !important",
                        class: 'w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large', remote:true%>
            <% if activity_participant.active_status %>
              <%= link_to 'DISABLE', activity_participant_path(activity_participant, entity_code: params[:entity_code], code: params[:code], count: params[:count], page: params[:page]),
                          style: "width:80px; height: 30px; color: #800754 !important",
                          method: :delete, data: { confirm: "Do you wish to disable: #{activity_participant.participant_name} (#{activity_participant.participant_alias})?" },
                          class: 'w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large', remote:true%>
            <% else %>
              <%= link_to 'ENABLE', activity_participant_path(activity_participant, entity_code: params[:entity_code], code: params[:code], count: params[:count], page: params[:page]),
                          style: "width:80px; height: 30px;",
                          method: :delete, data: { confirm: "Do you wish to enable: #{activity_participant.partiicipant_name} vs. #{activity_participant.participant_alias}?" },
                          class: 'w3-button w3-purple-vpos w3-border w3-border-purple w3-tiny w3-round-large', remote:true%>
            <% end %>

          </td>
        </tr>

      <% end %>

      </tbody>
    </table>
  </div>


</div>


<script>
    $(function(){
        $('.pagination a').attr('data-remote', 'true')
    });

</script>


