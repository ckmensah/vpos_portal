<div class="w3-container">
  <div id="id01" class="w3-modal w3-animate-opacity" style=" display: block">
    <!--<div class="w3-modal-content w3-card-4" >-->
    <!--    <br/>-->

    <div class="">

        <div class="w3-white w3-hover-shadow col-md-6 offset-md-3 w3-card-4 w3-border w3-border-purple rcorners w3-center">
          <h4 class="show w3-center"><strong>Loan Request Details</strong></h4>
          <p id="notice20"><strong></strong></p>

          <div class="w3-container">
            <br/>
            <div class="w3-container w3-responsive pre-scrollable w3-mobile">
              <table class="w3-table-all table table-bordered w3-hoverable w3-card-4">
                <% unless current_user.merchant_service? %>
                  <%
                    @services = EntityDivision.where(active_status: true, assigned_code: params[:code]).order(created_at: :desc).first
                    @service_name = @services ? "#{@services.division_name} (#{@services.division_alias})" : ""
                  %>
                  <tr>
                    <td class="raw_theme w3-border w3-border-black w3-leftbar"><strong>Service Name:</strong></td>
                    <td><strong><%= @service_name %></strong>
                    </td>
                  </tr>
                <% end %>
                
                <tr>
                  <td class="raw_theme w3-border w3-border-black w3-leftbar"><strong>Full Name:</strong></td>
                  <td><strong><%= @loan_request.full_name %></strong></td>
                </tr>

                <tr>
                  <td class="raw_theme w3-border w3-border-black w3-leftbar"><strong>ID Number:</strong></td>
                  <td><strong><%= @loan_request.id_number %></strong></td>
                </tr>

                <tr>
                  <td class="raw_theme w3-border w3-border-black w3-leftbar"><strong>Reference No.:</strong></td>
                  <td><strong><%= @loan_request.ref_number %></strong></td>
                </tr>
                
                <tr>
                  <td class="raw_theme w3-border w3-border-black w3-leftbar"><strong>Date:</strong></td>
                  <td>
                    <strong><%= @loan_request.created_at %></strong>
                  </td>
                </tr>

              </table>
            </div>
            
            <br/>
            <div class="w3-center">
              <%= link_to 'Back', loan_request_index_path(entity_code: params[:entity_code], code: params[:code],
                                                          filter_main: session[:loan_req_filter].present? ? session[:loan_req_filter].to_enum.to_h : "",
                                                          count1: params[:count1], page1: params[:page1], page: params[:page], count: params[:count]),
                          class: 'w3-bar-item w3-btn w3-ripple w3-round-large w3-dark-gray', remote: true %>
            </div>
            <br/>
          </div>

        </div>


      <br/>
    </div>

    <!--</div>-->

  </div>
  <!--  <br/>-->
  <div class="col-md-7 offset-md-5">
    <!--    <br><br>-->
  </div>
</div>







