<p id="notice"><%= notice %></p>

<h1>Entity Categories</h1>

<table>
  <thead>
    <tr>
      <th>Assigned code</th>
      <th>Category name</th>
      <th>Comment</th>
      <th>Active status</th>
      <th>Del status</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entity_categories.each do |entity_category| %>
      <tr>
        <td><%= entity_category.assigned_code %></td>
        <td><%= entity_category.category_name %></td>
        <td><%= entity_category.comment %></td>
        <td><%= entity_category.active_status %></td>
        <td><%= entity_category.del_status %></td>
        <td><%= entity_category.user_id %></td>
        <td><%= link_to 'Show', entity_category %></td>
        <td><%= link_to 'Edit', edit_entity_category_path(entity_category) %></td>
        <td><%= link_to 'Destroy', entity_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

