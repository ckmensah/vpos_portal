<div class="w3-container" >
  <div id="id19" class="w3-modal w3-animate-opacity" style=" display: block">
    <!--<div class="w3-modal-content w3-card-4" >-->
    <br/>

    <div class="">
      <div class="w3-white w3-hover-shadow col-md-4 offset-md-4 w3-card-4 w3-border w3-border-purple rcorners w3-center">
        <h4 class="show w3-center"><strong>Delete Media</strong></h4>
        <div id="inner_new_notice"></div>
      <% if params[:medium_type] == "images" %>
          <% if @entity_div_medium.active_status %>
            <h5 class="show w3-center"><strong>Do you wish to disable this image?</strong></h5>
          <% else %>
            <h5 class="show w3-center"><strong>Do you wish to enable this image?</strong></h5>
          <% end %>
        <div class="w3-container w3-border w3-border-purple">
          <br/>
          <div class="w3-responsive w3-center">
            <br>
            <img class="w3-hover-shadow w3-card-2 w3-border w3-round-xlarge" width=300 height=150 src="<%= "https://res.cloudinary.com/appsnmob/#{@entity_div_medium.media_data}" %>"  alt="your image" />
            <br><br>
          </div>
          <br/>
        </div>

        <br>
        <br>

          <div>
            <% if @entity_div_medium.active_status %>
              <%= link_to 'YES', entity_div_medium_path(id: @entity_div_medium.id, medium_type: params[:medium_type], code: params[:code], entity_code: params[:entity_code], count1: params[:count1], count4: params[:count4], count: params[:count], page: params[:page]),
                          style: "width:100px; height: 30px; color: #800754 !important",
                          method: :delete,
                          class: 'w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large', remote:true %>
            <% else %>
              <%= link_to 'YES', entity_div_medium_path(id: @entity_div_medium.id, medium_type: params[:medium_type], code: params[:code], entity_code: params[:entity_code], count1: params[:count1], count4: params[:count4], count: params[:count], page: params[:page]),
                          style: "width:100px; height: 30px;",
                          method: :delete,
                          class: 'w3-button w3-purple-vpos w3-border w3-border-purple w3-tiny w3-round-large', remote:true %>
            <% end %>
            <%= link_to 'NO', image_media_path(code: params[:code], entity_code: params[:entity_code],
                                               service_filter: $service_filter.present? ? $service_filter.to_enum.to_h : "",
                                               count1: params[:count1], page1: params[:page1], page: params[:page], count: params[:count]),
                        style: "width:100px; height: 30px;",
                        class: "w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large",remote:true %>

            <br><br>
          </div>
      <% elsif params[:medium_type] == "videos" %>
          <% if @entity_div_medium.active_status %>
            <h5 class="show w3-center"><strong>Do you wish to disable this video?</strong></h5>
          <% else %>
            <h5 class="show w3-center"><strong>Do you wish to enable this video?</strong></h5>
          <% end %>
        <div class="w3-container w3-border w3-border-purple">
          <br/>
          <div class="w3-responsive w3-center">
<!--            <br>-->
            <%=
              cl_video_tag("#{@entity_div_medium.media_data}",
                           :loop => true, :controls => true,
                           :transformation => [
                               :height=>200, :width=>250, :crop=>"pad",
                               :quality=>70, :duration=>"60"],
                           :fallback_content => "Your browser does not support HTML5 video tags." )
            %>


          </div>
          <br/>
        </div>
        <br>
        <br>

          <div>
            <% if @entity_div_medium.active_status %>
              <%= link_to 'YES', entity_div_medium_path(id: @entity_div_medium.id, medium_type: params[:medium_type], code: params[:code], entity_code: params[:entity_code], count1: params[:count1], count4: params[:count4], count: params[:count], page: params[:page]),
                          style: "width:100px; height: 30px; color: #800754 !important",
                          method: :delete,
                          class: 'w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large', remote:true %>
            <% else %>
              <%= link_to 'YES', entity_div_medium_path(id: @entity_div_medium.id, medium_type: params[:medium_type], code: params[:code], entity_code: params[:entity_code], count1: params[:count1], count4: params[:count4], count: params[:count], page: params[:page]),
                          style: "width:100px; height: 30px;",
                          method: :delete,
                          class: 'w3-button w3-purple-vpos w3-border w3-border-purple w3-tiny w3-round-large', remote:true %>
            <% end %>
              <%= link_to 'NO', video_media_path(code: params[:code], entity_code: params[:entity_code],
                                                 service_filter: $service_filter.present? ? $service_filter.to_enum.to_h : "",
                                                 count1: params[:count1], page1: params[:page1], page: params[:page], count: params[:count]),
                          style: "width:100px; height: 30px;",
                          class: "w3-button w3-white w3-border w3-border-purple w3-tiny w3-round-large",remote:true %>
            <br><br>
          </div>
      <% elsif params[:medium_type] == "handles" %>
      <% end %>


      </div>

    </div>


    <div class="col-md-7 col-md-offset-5">
    </div>

    <br/>
    <div class="col-md-7 col-md-offset-5">
      <br/>
      <br/>
    </div>
    <!--</div>-->

  </div>
</div>

