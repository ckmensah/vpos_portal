
<%= simple_form_for(@fund_movement) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :entity_div_code %>
    <%= f.input :service_id %>
    <%= f.input :ref_id %>
    <%= f.input :amount %>
    <%= f.input :narration %>
    <%= f.input :trans_type %>
    <%= f.input :trans_status %>
    <%= f.input :trans_desc %>
    <%= f.input :processed %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
